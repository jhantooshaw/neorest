        </div> 
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div>
      </div>
    </div> 

    <% unless current_client.blank? %>
      <div id ="import_loc_fin_year">     
