    <div class="con_container clearfix">
      <div class="content-body">
        <div class="content-body-inner">
          <% if Rails.env.production? %>
            <pre>
                      Exception Details : <%= @exception.inspect %>
                      Status Code : <%= @status_code.inspect %>
                      Rescue Response : <%= @rescue_response.inspect %>
            </pre>
          <% else %>
            <div class="error_div">
              <div align="center">
                <img src="/assets/404.png" width="400" height="286" alt=""/>
              </div>


              <center>
                <div class="txt">
                  This is not the web page you are looking for
                </div>
                <a style="border:none;outline:none;" href="javascript:window.history.back(-1);">
                  <button class="btn btn-success" style="margin:30px 0;">Back to Previous Page</button>
                </a>
                <center/>
                <hr/>

                <div class="back_home">
                  <!--<a href="#">Home</a> | <a href="#">About Us</a> | <a href="#">Contact Us</a>-->
                </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>


