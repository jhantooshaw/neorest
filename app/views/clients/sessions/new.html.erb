<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form", class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>  
    <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control", required: "required", value: "jhantoo.shaw@gmail.com" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control", required: "required", value: "abcd1234" %>

        <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
            <%= f.check_box :remember_me %> Remember me
          </label>
        <% end -%>
        <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"  %>
        <% end %>
        <div class="form-signin">
          <%= render "clients/shared/links" %>
        </div>