<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form", class: "form-horizontal", id: "formID" }) do |f| %>
    <legend>Hotel Information</legend> 
    <%= devise_error_messages! %>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Hotel Name</label>
      <div class="col-sm-6">
        <%= f.text_field :hotel_name, autofocus: true, :class => "form-control validate[required]", :placeholder => "Enter Hotel Name", autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">      
      <label for="inputEmail3" class="col-sm-2 control-label">Address</label>
      <div class="col-sm-6">
        <%= f.text_area :address, :class => "form-control validate[required]", :placeholder => "Enter Hotel Address" %>
      </div>   
    </div>

    <div class="form-group">   
      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label ">City</label>
        <div class="col-sm-2">
          <%= f.text_field :city, :class => "form-control validate[required]", :placeholder => "Enter City" %>
        </div>  
      </div>
      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label">Zip/Pin</label>
        <div class="col-sm-2">
          <%= f.text_field :zipcode, :class => "form-control validate[required,custom[integer]]", :placeholder => "Enter Zip/Pin code" %>
        </div>  
      </div>    
      <div class="clearfix"></div>
    </div>

    <div class="form-group"> 
      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label">Country</label>
        <div class="col-sm-2">
    <%#= f.text_field :country_id, :class => "form-control validate[required]", :placeholder => "Select Country" %>
          <%= f.select :country_id, CountryStateSelect::Constant::COUNTRIES, {}, :class => "form-control validate[required]", :placeholder => "Select Country" %>
        </div>  
      </div>  

      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label">State</label>
        <div class="col-sm-2">
    <%#= f.text_field :state_id, :class => "form-control validate[required]", :placeholder => "Select State" %>
          <%= f.select :state_id, CountryStateSelect::Constant::INDIAN_STATES,{},  :class => "form-control validate[required]", :placeholder => "Select State" %>
        </div>  
      </div>

      <div class="clearfix"></div>
    </div>

    <div class="form-group">   
      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label">Mobile No</label>
        <div class="col-sm-2">
          <%= f.text_field :mobile, :class => "form-control validate[required,minSize[8],custom[phone]]", :placeholder => "Enter Mobile No" %>
        </div>  
      </div>

      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label">Phone No</label>
        <div class="col-sm-2">
          <%= f.text_field :phone, :class => "form-control validate[required,minSize[8],custom[phone]]", :placeholder => "Enter Phone No" %>
        </div>  
      </div>    
      <div class="clearfix"></div>
    </div>

    <legend>Login Information</legend>   

    <div class="form-group">   
      <div class="FL">
        <label for="inputEmail3" class="col-sm-2 control-label">Sub domain</label>
        <div class="col-sm-3">
          <%= f.text_field :subdomain, :class => "form-control validate[required,minSize[3],custom[onlyLetterNumber],custom[subdmain],ajax[ClientSubDomain]]", :placeholder => "Enter Sub Domain" %>
        </div>  
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-3">
        <%= f.text_field :email, :class => "form-control validate[]", :placeholder => "Enter Email Address" %>
      </div>  
    </div>

    <div class="form-group">        
      <label for="inputEmail3" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-3">
        <%= f.password_field :password, :class => "form-control validate[required,minSize[8]]", :placeholder => "Enter Password" %>
      </div>  
    </div>


    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Password Confirmation</label>
      <div class="col-sm-3">
        <%= f.password_field :password_confirmation, :class => "form-control validate[required]", :placeholder => "Enter Confirm Password" %>
      </div> 
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Sign in</button>
      </div>
    </div>
  <%end%>