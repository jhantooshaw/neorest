<% unless @entries.blank? %>
  <div class="table-responsive" data-pattern="priority-columns">
    <table cellspacing="0" id="tech-companies-1" class="table table-small-font table-bordered table-striped">
      <thead>
        <tr>
          <th data-priority="1">Combo Code No</th>
          <th>Combo Item</th>
          <th>Combo Qty</th>
          <th data-priority="1">Offer Code No</th>
          <th>Offer Item</th>
          <th>Offer Qty</th>
          <th data-priority="1">Start Date</th>
          <th data-priority="1">End Date</th>
          <th>Outlet</th>
          <th>Package</th>
        </tr>
      </thead>
      <tbody>          
        <%@entries.each do |entry|%>
          <tr>
            <td><%= entry.combo_code_no%></td>
            <td><%= entry.combo_desc%></td>
            <td><%= entry.combo_qty%></td>
            <td><%= entry.code_no_offer%></td>
            <td><%= entry.desc_offer%></td>
            <td><%= entry.qty_offer%></td>
            <td><%= date_format(entry.start_date)%></td>
            <td><%= date_format(entry.end_date)%></td>
            <td><%= entry.outlet.name%></td>
            <td><%= entry.combo_package.name%></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

  <div class="" style="text-align:center;">
    <%= will_paginate @entries, params: {location_id: params[:location_id], outlet_id: params[:outlet_id]}, class: 'pagination-sm', renderer: BootstrapPagination::Rails %>
    </div>
  <%else%>    
    No Combo Offer Found!!!
  <%end%>
  <script type="text/javascript">
    responsive_table(true);
  </script>